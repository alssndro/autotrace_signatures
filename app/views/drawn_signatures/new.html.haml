%h2 Create a new signature

= form_for(@drawn_signature) do |f|
  = f.label :full_name
  = f.text_field :name, placeholder: 'Full Name', autocapitalize: 'words'
  %p Draw your signature in the box below:
  #signature
  = f.hidden_field :signature
  %ul.button-group.even-2
    %li
      = f.submit value: "Submit", class: "button", id: "save-signature"
    %li
      %a{href: "#", id: "clear-signature", class: "button"}
        Clear signature
